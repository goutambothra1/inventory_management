<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:background="#D3D3D3"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnstock"
            android:layout_width="125dp"
            android:layout_height="130dp"

            android:layout_marginLeft="60dp"
            android:layout_marginTop="190dp"
            android:backgroundTint="#516CFB"
            android:gravity="center"
            android:text="Stock Out"
            android:textSize="20dp"
            app:cornerRadius="0dp"
            app:iconGravity="textEnd" />

        <Button
            android:id="@+id/btnhistory"
            android:layout_width="125dp"
            android:layout_height="130dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="400dp"
            android:backgroundTint="#516CFB"
            android:text="History"
            android:textSize="20dp"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/viewrequest"
            android:layout_width="125dp"
            android:layout_height="130dp"
            android:layout_alignLeft="@id/btnstock"
            android:layout_marginLeft="183dp"
            android:layout_marginTop="190dp"
            android:backgroundTint="#516CFB"
            android:text="View Request"
            android:textSize="20dp"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/totalstock"
            android:layout_width="125dp"
            android:layout_height="130dp"
            android:layout_alignLeft="@id/btnhistory"
            android:layout_marginLeft="185dp"
            android:layout_marginTop="400dp"
            android:backgroundTint="#516CFB"
            android:text="Total Stock"
            android:textSize="20dp"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/btnback"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="570dp"
            android:backgroundTint="#516CFB"
            android:text="BACK"
            app:cornerRadius="0dp" />

        <TextView
            android:id="@+id/textadmin"

            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:text="ADMIN"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>