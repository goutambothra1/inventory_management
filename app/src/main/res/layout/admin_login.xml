<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4E4EA">

    <RelativeLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:clipToOutline="true"
        android:background="#FFFFFF">
        <TextView
            android:id="@+id/admin_login_title"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:text="Admin Login"
            style="@style/title"
            android:lineSpacingExtra="-7sp"
            android:gravity="center_horizontal|top"
            />

        <TextView
            android:id="@+id/back"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="left"
            android:drawableLeft="@drawable/baseline_arrow_back_24"
            android:gravity="bottom"
            android:textColor="@color/black"
            android:textSize="24dp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/topPanel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/user"
            android:scaleType="centerCrop"

            />
    </RelativeLayout>

    <TextView
        android:id="@+id/admin_text_title"
        style="@style/title"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="185dp"
        android:layout_marginTop="257dp"
        android:layout_marginEnd="133dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="-7sp"
        android:text="Admin" />

    <TextView
        android:id="@+id/username"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/admin_text_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="46dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="247dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="top"
        android:lineSpacingExtra="2dp"
        android:text="Username"
        android:textAppearance="@style/Email" />

    <RelativeLayout
        android:id="@+id/login_admin_frame"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:layout_below="@id/username"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="367dp"
        android:layout_marginRight="48dp"
        android:background="@drawable/admin_login_frame">

        <EditText
            android:id="@+id/admin_id_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/textfield"
            android:gravity="center"
            android:hint="enter you username"
            android:lineSpacingExtra="18sp"
            android:textColor="@color/black"

            />
    </RelativeLayout>

    <TextView
        android:id="@+id/password"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_admin_frame"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="249dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="top"
        android:lineSpacingExtra="2dp"
        android:text="Password"
        android:textAppearance="@style/Email" />
    <RelativeLayout
        android:id="@+id/password_admin_frame"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:layout_below="@id/password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="465dp"
        android:layout_marginRight="48dp"
        android:background="@drawable/admin_login_frame">

        <EditText
            android:id="@+id/admin_password_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/textfield"
            android:gravity="center"
            android:hint="enter you username"
            android:lineSpacingExtra="18sp"
            android:textColor="@color/black"
            android:password="true"

            />
    </RelativeLayout>

    <Button
        android:id="@+id/admin_login_button"
        style="@style/button"
        android:layout_width="336dp"
        android:layout_height="42dp"
        android:layout_below="@id/password_admin_frame"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="36dp"
        android:fontFamily="sans-serif-medium"
        android:text="Login"
        android:textColor="#FDFCFC" />

</RelativeLayout>